{
  "name": "elara",
  "version": "1.0.0",
  "description": "MONOREPO ELARA",
  "main": "index.js",
  "repository": "https://github.com/pablogarayprosis/pontoagil",
  "author": "Gustavo Henrique",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "tools/*"
    ]
  },
  "scripts": {
    "server": "yarn workspace @elara/server start",
    "server:dev": "yarn workspace @elara/server start:dev",
    "client": "yarn workspace @elara/client dev",
    "prisma:migrate": "yarn workspace @elara/server prisma migrate dev",
    "prisma:generate": "yarn workspace @elara/server prisma generate",
    "seed": "yarn workspace @elara/server seed",
    "prestart": "yarn workspace @elara/client dev &",
    "start": "yarn workspace @elara/server start:dev",
    "plop:domain": "yarn workspace @elara/plop domain",
    "plop:entity": "yarn workspace @elara/plop entity",
    "plop:infra": "yarn workspace @elara/plop infra",
    "plop:presenter": "yarn workspace @elara/plop presenter",
    "plop:shared": "yarn workspace @elara/plop shared",
    "plop:provider": "yarn workspace @elara/plop provider",
    "plop:repository": "yarn workspace @elara/plop repository",
    "plop:usecase": "yarn workspace @elara/plop usecase",
    "plop:grid": "yarn workspace @elara/plop grid",
    "plop:page": "yarn workspace @elara/plop page"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-html": "^6.1.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-yaml": "^0.3.0",
    "jest-diff": "^27.5.1",
    "prettier": "^2.2.1",
    "pretty-format": "^27.5.1",
    "typescript": "^4.5.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "..packages/server/src/domain/**/usecases/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>../packages/server/src/$1",
      "^infra/(.*)$": "<rootDir>../packages/server/src/infra/$1",
      "^domain/(.*)$": "<rootDir>../packages/server/src/domain/$1",
      "^shared/(.*)$": "<rootDir>../packages/server/src/shared/$1",
      "^presenter/(.*)$": "<rootDir>..packages/server/src/presentation/$1",
      "@types": "<rootDir>..packages/types"
    }
  }
}