{
  "name": "@elara/server",
  "version": "1.0.0",
  "description": "API Rest server in NestJs",
  "main": "index.js",
  "author": "Gustavo Henrique",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/server/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:dev": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "seed": "node --loader ts-node/esm src/infra/database/prisma/seed.ts",
    "plop:domain": "yarn workspace @pontoagil/plop domain",
    "plop:entity": "yarn workspace @pontoagil/plop entity",
    "plop:infra": "yarn workspace @pontoagil/plop infra",
    "plop:presenter": "yarn workspace @pontoagil/plop presenter",
    "plop:shared": "yarn workspace @pontoagil/plop shared",
    "plop:provider": "yarn workspace @pontoagil/plop provider",
    "plop:repository": "yarn workspace @pontoagil/plop repository",
    "plop:usecase": "yarn workspace @pontoagil/plop usecase"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.3.17",
    "@nestjs/axios": "^0.0.5",
    "@nestjs/bull": "^0.5.0",
    "@nestjs/common": "^8.3.1",
    "@nestjs/config": "^1.2.0",
    "@nestjs/core": "^8.3.1",
    "@nestjs/event-emitter": "^1.0.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/mapped-types": "^1.0.1",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.3.1",
    "@nestjs/platform-socket.io": "^8.3.1",
    "@nestjs/websockets": "^8.3.1",
    "@prisma/client": "^3.5.0",
    "@react-google-maps/api": "^2.7.0",
    "@types/lodash": "^4.14.178",
    "bcrypt": "^5.0.1",
    "bull": "^3.29.2",
    "cache-manager": "^3.6.0",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "0.4.0",
    "class-validator": "^0.13.2",
    "dayjs": "^1.10.7",
    "dayjs-plugin-utc": "^0.1.2",
    "handlebars": "^4.7.7",
    "inquirer": "^8.2.0",
    "lodash": "^4.17.21",
    "nanoid": "^3.1.30",
    "nest-router": "^1.0.9",
    "nestjs-form-data": "^1.4.7",
    "nestjs-redis": "git+https://github.com/GyanendroKh/nestjs-redis.git#nest8-fix",
    "nestjs-router": "^0.0.5",
    "nodemailer": "^6.6.5",
    "passport": "^0.5.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.4",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/bull": "^3.15.5",
    "@types/cache-manager": "^3.4.2",
    "@types/cache-manager-redis-store": "^2.0.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.11.12",
    "@types/nodemailer": "^6.4.4",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "4.29.2",
    "@typescript-eslint/parser": "4.29.2",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.0",
    "jest": "^27.0.6",
    "prettier": "2.3.2",
    "prisma": "^3.5.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^^4.5.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "../src/domain/**/usecases/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>../src/$1",
      "^infra/(.*)$": "<rootDir>../src/infra/$1",
      "^domain/(.*)$": "<rootDir>../src/domain/$1",
      "^shared/(.*)$": "<rootDir>../src/shared/$1",
      "^presentation/(.*)$": "<rootDir>../src/presentation/$1"
    }
  },
  "prisma": {
    "schema": "./src/infra/database/prisma/schema.prisma"
  }
}
